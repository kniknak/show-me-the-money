{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "max-len"              : [2, 200, 2],
    "object-curly-spacing" : ["error", "never"],
    "indent": ["error", 4],
    "comma-dangle": ["error", "only-multiline"],
    "react/jsx-indent": ["error", 4],
    "react/jsx-space-before-closing": ["error", "never"],
    "react/jsx-equals-spacing": [2, "always"],
    "jsx-quotes"        : [2, "prefer-double"],
    "quotes"        : [2, "double"]
  }
}
